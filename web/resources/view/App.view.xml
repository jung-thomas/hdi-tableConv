<core:View xmlns="sap.m" xmlns:u="sap.ui.unified" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" controllerName="view.App">
	<u:Shell id="myShell" icon="./images/sap_18.png">
		<u:user>
			<u:ShellHeadUserItem image="sap-icon://person-placeholder" username="{config>/UserName}"/>
		</u:user>
		<u:content>
			<Panel headerText="{i18n>p1}" expandable="true" expanded="true">
				<List>
					<InputListItem label="{i18n>schema}">
						<Input id="Schema" value="{/Schema}" showSuggestion="true" suggest="loadSchemaFilter"/>
					</InputListItem>
					<InputListItem label="{i18n>table}">
						<Input id="Table" value="{/Table}" showSuggestion="true" suggest="loadTableFilter"/>
					</InputListItem>
				</List>
				<Toolbar>
					<Button text="{i18n>display}" press="onConversionDisplay"/>
					<Button text="{i18n>massTbl}" press="onDownloadText"/>
					<Button text="{i18n>massDD}" press="onDownloadZip"/>
				</Toolbar>
			</Panel>
			<Panel id="CDSTABLEPanelContent" headerText="{i18n>p3}" expandable="true" expanded="true">
			</Panel>
		</u:content>
	</u:Shell>
</core:View>